@model Contratos2.Models.Entities.ApplicationUser
@{
    ViewData["Title"] = "Meu Perfil";
}

<h2><i class="fas fa-user-circle me-2"></i>@ViewData["Title"]</h2>
<hr />

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Informações do Perfil</h4>
            </div>
            <div class="card-body">
                <div class="row mb-4">
                    <div class="col-md-4 text-center">
                        @if (!string.IsNullOrEmpty(Model.FotoPerfil))
                        {
                            <img src="@Model.FotoPerfil" alt="Foto de Perfil" class="img-thumbnail" style="max-width: 200px; max-height: 200px;" />
                        }
                        else
                        {
                            <div class="bg-secondary text-white rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 200px; height: 200px;">
                                <i class="fas fa-user fa-5x"></i>
                            </div>
                        }
                    </div>
                    <div class="col-md-8">
                        <dl class="row">
                            <dt class="col-sm-4">Nome Completo:</dt>
                            <dd class="col-sm-8">@Model.NomeCompleto</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Tipo:</dt>
                            <dd class="col-sm-8">@Model.TipoUtilizador</dd>

                            <dt class="col-sm-4">Data Registo:</dt>
                            <dd class="col-sm-8">@Model.DataRegisto.ToString("dd/MM/yyyy")</dd>
                        </dl>
                    </div>
                </div>

                <div class="mt-4">
                    <a asp-action="Edit" class="btn btn-primary">
                        <i class="fas fa-edit me-2"></i>Editar Perfil
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>


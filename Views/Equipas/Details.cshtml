@model Contratos2.Models.Entities.Equipa

@{
    ViewData["Title"] = "Detalhes da Equipa";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-shield-alt me-2"></i>Detalhes da Equipa</h3>
        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-6">
                <dl class="row">
                    <dt class="col-sm-4">Nome:</dt>
                    <dd class="col-sm-8">@Model.Nome</dd>

                    <dt class="col-sm-4">Localidade:</dt>
                    <dd class="col-sm-8">@(Model.Localidade ?? "-")</dd>

                    <dt class="col-sm-4">Estádio:</dt>
                    <dd class="col-sm-8">@(Model.Estadio ?? "-")</dd>

                    <dt class="col-sm-4">Data Fundação:</dt>
                    <dd class="col-sm-8">@Model.DataFundacao.ToString("dd/MM/yyyy")</dd>
                </dl>
            </div>
            @if (!string.IsNullOrEmpty(Model.Emblema))
            {
                <div class="col-md-6 text-center">
                    <img src="@Model.Emblema" alt="@Model.Nome" class="img-fluid rounded" style="max-height: 300px;" />
                </div>
            }
        </div>

        @if (Model.Contratos != null && Model.Contratos.Any())
        {
            <hr />
            <h5>Contratos</h5>
            <div class="table-responsive">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th>Jogador</th>
                            <th>Data Início</th>
                            <th>Data Fim</th>
                            <th>Salário</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var contrato in Model.Contratos)
                        {
                            <tr>
                                <td>@contrato.Jogador?.Nome</td>
                                <td>@contrato.DataInicio.ToString("dd/MM/yyyy")</td>
                                <td>@contrato.DataFim.ToString("dd/MM/yyyy")</td>
                                <td>@(contrato.Salario?.ToString("C") ?? "-")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>


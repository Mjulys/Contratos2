@model ErrorViewModel
@{
    ViewData["Title"] = "Erro";
}

<div class="container text-center mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h2><i class="fas fa-exclamation-triangle me-2"></i>Erro</h2>
                </div>
                <div class="card-body">
                    <h3 class="text-danger mb-4">Ocorreu um erro ao processar o seu pedido.</h3>
                    
                    @if (!string.IsNullOrEmpty(Model.ErrorMessage))
                    {
                        <div class="alert alert-danger">
                            <strong>Detalhes:</strong> @Model.ErrorMessage
                        </div>
                    }

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                            <i class="fas fa-home me-2"></i>Voltar à Página Inicial
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Voltar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@model Contratos2.Models.Entities.Contrato

@{
    ViewData["Title"] = "Detalhes do Contrato";
}

<div class="card">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h3 class="mb-0"><i class="fas fa-file-contract me-2"></i>Detalhes do Contrato</h3>
        <div>
            @if (User.IsInRole("Admin") || User.IsInRole("Funcionario"))
            {
                <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">
                    <i class="fas fa-edit me-2"></i>Editar
                </a>
            }
            <a asp-action="Index" class="btn btn-secondary">
                <i class="fas fa-arrow-left me-2"></i>Voltar
            </a>
        </div>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Jogador:</dt>
            <dd class="col-sm-9">@Model.Jogador?.Nome</dd>

            <dt class="col-sm-3">Equipa:</dt>
            <dd class="col-sm-9">@Model.Equipa?.Nome</dd>

            <dt class="col-sm-3">Data Início:</dt>
            <dd class="col-sm-9">@Model.DataInicio.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Data Fim:</dt>
            <dd class="col-sm-9">@Model.DataFim.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Salário:</dt>
            <dd class="col-sm-9">@(Model.Salario?.ToString("C") ?? "-")</dd>

            <dt class="col-sm-3">Cláusulas:</dt>
            <dd class="col-sm-9">@(Model.Clausulas ?? "-")</dd>

            <dt class="col-sm-3">Data Criação:</dt>
            <dd class="col-sm-9">@Model.DataCriacao.ToString("dd/MM/yyyy HH:mm")</dd>
        </dl>
    </div>
</div>


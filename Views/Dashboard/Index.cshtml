@{
    ViewData["Title"] = "Dashboard";
}

<div class="container-fluid py-4">
    <h2 class="mb-4"><i class="fas fa-chart-line me-2"></i>Dashboard Administrativo</h2>

    <!-- Cards de Estatísticas -->
    <div class="row mb-4">
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-primary h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Total de Jogadores</h6>
                            <h2 class="mb-0">@ViewBag.TotalJogadores</h2>
                        </div>
                        <i class="fas fa-users fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-success h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Total de Equipas</h6>
                            <h2 class="mb-0">@ViewBag.TotalEquipas</h2>
                        </div>
                        <i class="fas fa-shield-alt fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-info h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Total de Contratos</h6>
                            <h2 class="mb-0">@ViewBag.TotalContratos</h2>
                        </div>
                        <i class="fas fa-file-contract fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-3 mb-3">
            <div class="card text-white bg-warning h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-subtitle mb-2 text-white-50">Salário Total (Ativos)</h6>
                            <h2 class="mb-0">@(((decimal)ViewBag.SalarioTotalAtivos).ToString("C"))</h2>
                        </div>
                        <i class="fas fa-euro-sign fa-3x opacity-50"></i>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Cards de Status de Contratos -->
    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card border-success h-100">
                <div class="card-body">
                    <h5 class="card-title text-success"><i class="fas fa-check-circle me-2"></i>Contratos Ativos</h5>
                    <h3 class="text-success">@ViewBag.ContratosAtivos</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-secondary h-100">
                <div class="card-body">
                    <h5 class="card-title text-secondary"><i class="fas fa-history me-2"></i>Contratos Passados</h5>
                    <h3 class="text-secondary">@ViewBag.ContratosPassados</h3>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-3">
            <div class="card border-info h-100">
                <div class="card-body">
                    <h5 class="card-title text-info"><i class="fas fa-calendar-alt me-2"></i>Contratos Futuros</h5>
                    <h3 class="text-info">@ViewBag.ContratosFuturos</h3>
                </div>
            </div>
        </div>
    </div>

    <!-- Gráficos -->
    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-bar me-2"></i>Contratos Criados por Mês</h5>
                </div>
                <div class="card-body">
                    <canvas id="contratosPorMesChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="fas fa-chart-pie me-2"></i>Distribuição de Salários</h5>
                </div>
                <div class="card-body">
                    <canvas id="distribuicaoSalariosChart"></canvas>
                </div>
            </div>
        </div>
    </div>

    <div class="row mb-4">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="fas fa-users me-2"></i>Jogadores por Equipa (Top 10)</h5>
                </div>
                <div class="card-body">
                    <canvas id="jogadoresPorEquipaChart"></canvas>
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="fas fa-info-circle me-2"></i>Estatísticas Adicionais</h5>
                </div>
                <div class="card-body">
                    <ul class="list-unstyled">
                        <li class="mb-2">
                            <strong>Salário Médio:</strong> 
                            <span class="badge bg-primary">@(((decimal)ViewBag.SalarioMedio).ToString("C"))</span>
                        </li>
                        <li class="mb-2">
                            <strong>Total de Utilizadores:</strong> 
                            <span class="badge bg-success">@ViewBag.TotalUtilizadores</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Tabelas -->
    <div class="row">
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0"><i class="fas fa-exclamation-triangle me-2"></i>Contratos a Expirar (Próximos 3 Meses)</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.ContratosExpirando != null && ((List<Contratos2.Models.Entities.Contrato>)ViewBag.ContratosExpirando).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm">
                                <thead>
                                    <tr>
                                        <th>Jogador</th>
                                        <th>Equipa</th>
                                        <th>Data Fim</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var contrato in (List<Contratos2.Models.Entities.Contrato>)ViewBag.ContratosExpirando)
                                    {
                                        <tr>
                                            <td>@contrato.Jogador?.Nome</td>
                                            <td>@contrato.Equipa?.Nome</td>
                                            <td>@contrato.DataFim.ToString("dd/MM/yyyy")</td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <p class="text-muted">Nenhum contrato a expirar nos próximos 3 meses.</p>
                    }
                </div>
            </div>
        </div>
        <div class="col-md-6 mb-3">
            <div class="card">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0"><i class="fas fa-trophy me-2"></i>Top 5 Jogadores com Mais Contratos</h5>
                </div>
                <div class="card-body">
                    @if (ViewBag.TopJogadores != null)
                    {
                        var topJogadores = ViewBag.TopJogadores as System.Collections.Generic.List<dynamic>;
                        @if (topJogadores != null && topJogadores.Any())
                        {
                            <div class="table-responsive">
                                <table class="table table-sm">
                                    <thead>
                                        <tr>
                                            <th>Jogador</th>
                                            <th>Nº Contratos</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var jogador in topJogadores)
                                        {
                                            <tr>
                                                <td>@jogador.Jogador</td>
                                                <td><span class="badge bg-primary">@jogador.Quantidade</span></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                    }
                    else
                    {
                        <p class="text-muted">Nenhum dado disponível.</p>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.umd.min.js"></script>
    <script>
        // Gráfico de Contratos por Mês
        const contratosPorMesCtx = document.getElementById('contratosPorMesChart').getContext('2d');
        new Chart(contratosPorMesCtx, {
            type: 'line',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.ContratosPorMesLabels)),
                datasets: [{
                    label: 'Contratos Criados',
                    data: @Html.Raw(Json.Serialize(ViewBag.ContratosPorMesData)),
                    borderColor: 'rgb(75, 192, 192)',
                    backgroundColor: 'rgba(75, 192, 192, 0.2)',
                    tension: 0.4,
                    fill: true
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: true
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });

        // Gráfico de Distribuição de Salários
        const distribuicaoSalariosCtx = document.getElementById('distribuicaoSalariosChart').getContext('2d');
        new Chart(distribuicaoSalariosCtx, {
            type: 'doughnut',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.DistribuicaoSalariosLabels)),
                datasets: [{
                    data: @Html.Raw(Json.Serialize(ViewBag.DistribuicaoSalariosData)),
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.8)',
                        'rgba(54, 162, 235, 0.8)',
                        'rgba(255, 206, 86, 0.8)',
                        'rgba(75, 192, 192, 0.8)',
                        'rgba(153, 102, 255, 0.8)'
                    ]
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        position: 'bottom'
                    }
                }
            }
        });

        // Gráfico de Jogadores por Equipa
        const jogadoresPorEquipaCtx = document.getElementById('jogadoresPorEquipaChart').getContext('2d');
        new Chart(jogadoresPorEquipaCtx, {
            type: 'bar',
            data: {
                labels: @Html.Raw(Json.Serialize(ViewBag.JogadoresPorEquipaLabels)),
                datasets: [{
                    label: 'Nº de Jogadores',
                    data: @Html.Raw(Json.Serialize(ViewBag.JogadoresPorEquipaData)),
                    backgroundColor: 'rgba(54, 162, 235, 0.8)',
                    borderColor: 'rgba(54, 162, 235, 1)',
                    borderWidth: 1
                }]
            },
            options: {
                responsive: true,
                plugins: {
                    legend: {
                        display: false
                    }
                },
                scales: {
                    y: {
                        beginAtZero: true,
                        ticks: {
                            stepSize: 1
                        }
                    }
                }
            }
        });
    </script>
}


@page
@{
    ViewData["Title"] = "Email de Recuperação Enviado";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="fas fa-envelope-open me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body text-center">
                <p>
                    Por favor, verifique o seu email para redefinir a sua password.
                </p>
                <a asp-page="./Login" class="btn btn-primary mt-3">
                    <i class="fas fa-sign-in-alt me-2"></i>Voltar ao Login
                </a>
            </div>
        </div>
    </div>
</div>


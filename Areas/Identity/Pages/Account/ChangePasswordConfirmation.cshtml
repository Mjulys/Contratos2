@page
@{
    ViewData["Title"] = "Password Definida";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="fas fa-check-circle me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body text-center">
                <p class="mb-4">A sua password foi definida com sucesso!</p>
                <p class="text-muted mb-4">Agora pode aceder à sua conta.</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                    <i class="fas fa-home me-2"></i>Ir para a Página Inicial
                </a>
            </div>
        </div>
    </div>
</div>


@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu a Password?";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="card">
            <div class="card-header">
                <h3 class="mb-0"><i class="fas fa-key me-2"></i>@ViewData["Title"]</h3>
            </div>
            <div class="card-body">
                <p>Introduza o seu email e enviaremos um link para redefinir a sua password.</p>
                <form method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                    
                    <div class="mb-3">
                        <label asp-for="Input.Email" class="form-label"></label>
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" />
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>

                    <button type="submit" class="btn btn-primary w-100">
                        <i class="fas fa-paper-plane me-2"></i>Enviar
                    </button>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-page="./Login">Voltar ao Login</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

